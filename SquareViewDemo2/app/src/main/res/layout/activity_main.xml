<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ldl.squareview.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:text="涨跌都顺序横向走"
        android:layout_height="wrap_content" />
    <com.ldl.squareview.widget.SquareFlowView
        android:id="@+id/sflowView"
        android:layout_marginTop="12dp"
        app:fall_color="#63C"
        app:rose_color="#ff138F"
        android:background="#cccccc"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />

<TextView
    android:layout_width="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="12dp"
    android:text="连涨连跌向下走，涨跌切换新开一列"
    android:layout_height="wrap_content" />
    <com.ldl.squareview.widget.SquareFlowView
        android:id="@+id/sflowViewss"
        android:background="#cccccc"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
